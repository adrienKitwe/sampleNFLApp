<%- model_class = Game -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:superbowl) %>:</strong></dt>
  <dd><%= @game.superbowl %></dd>
  <dt><strong><%= model_class.human_attribute_name(:winner) %>:</strong></dt>
  <dd><%= @game.winner %></dd>
  <dt><strong><%= model_class.human_attribute_name(:winscore) %>:</strong></dt>
  <dd><%= @game.winscore %></dd>
  <dt><strong><%= model_class.human_attribute_name(:opponent) %>:</strong></dt>
  <dd><%= @game.opponent %></dd>
  <dt><strong><%= model_class.human_attribute_name(:oppscore) %>:</strong></dt>
  <dd><%= @game.oppscore %></dd>
  <dt><strong><%= model_class.human_attribute_name(:gamedate) %>:</strong></dt>
  <dd><%= @game.gamedate %></dd>
  <dt><strong><%= model_class.human_attribute_name(:winconf) %>:</strong></dt>
  <dd><%= @game.winconf %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              games_path, :class => 'btn'  %>
              
  <% if admin? %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_game_path(@game), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              game_path(@game),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
  <% end %>
</div>
